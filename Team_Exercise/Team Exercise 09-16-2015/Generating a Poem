 */
public class TE_Lesson_3_Exercise_1
{
    public static void main(String[] args)
    {
         Scanner scan = new Scanner (System.in);
         String red;
         String blue;
         String click;
         String something;
         
         System.out.print("Enter something that is red:");
         red = scan.nextLine();
         System.out.print("Enter something that is blue:");
         blue = scan.nextLine();
         System.out.print("Enter something that can be clicked:");
         click = scan.nextLine();
         System.out.print("Enter anything you want:");
         something = scan.nextLine();
         
         System.out.println("\"" + red + " are red,");
         System.out.println( blue + " are blue,");
         System.out.println("Click on the " + click);
         System.out.println("There's a " + something + " waiting for you.\"");
         
         
         
        
    }
}
